{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "declaration": true,
    "rootDir": "./tmp",
    "outDir": "./dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [ "es2015", "dom" ]
  },
  "files": [
    "./tmp/picker.module.ts"
  ],
  "exclude": [
    "node_modules",
    "npmdist",
    "dist",
    "**/**.spec.ts"
  ],
  "include": [
    "tmp/**/*"
  ]
}
